{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aolot-scoreboard",
  "version": "0.1.0",
  "identifier": "com.kai.aolot-scoreboard",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "aolot-scoreboard",
        "width": 640,
        "height": 480,
        "resizable": false,
        "maximizable": false,
        "minimizable": true
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

